


<h3>Ember Query Params: search</h3>

<form {{action "search" on="submit"}}>
  {{input value=searchField}}
  {{input value=searchValue}}
  <input type="submit" value="Search"/>
</form>


<table class="uk-table uk-table-hover">
    <caption></caption>
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>코멘트</th>
            <th>읽음</th>
            <th>글쓴이</th>
            <th>글쓴 시간</th>
        </tr>
    </thead>
    <tbody>
        {{#each this}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{#link-to 'post.index' this.id }}{{this.title}}{{/link-to}}</td>
            <td>{{this.total_comments}}</td>
            <td>{{this.views}}</td>
            <td>{{this.name}}</td>
            <td>{{date-format this.created_at 'MMMM Do, YYYY [at] h:mm'}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="uk-clearfix">
    <div class="uk-float-right">{{#link-to 'posts.new' ptype class="uk-button"}} 글쓰기 {{/link-to}}</div>
</div>

{{page-numbers content=content totalPages=15 showFL=true}}
