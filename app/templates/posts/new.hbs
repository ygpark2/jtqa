<h3>New Post...</h3>

{{ model.isValid }}
<form class="uk-form uk-form-horizontal" {{action 'submit' on='submit'}}>
<fieldset>
  <legend>새글 쓰기</legend>
    <div class="uk-form-row">
      <label class="uk-form-label uk-text-center" for="form-h-title">Title</label>
      <div class="uk-form-controls">
        {{input type="text" id="form-h-title" classBinding=":uk-width-1-1 model.errors.title:uk-form-danger" value=model.title placeholder="Title"}}
        {{#if model.errors.title}}
          {{ model.errors.title }}
        {{/if}}
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label uk-text-center" for="form-h-name">Name</label>
      <div class="uk-form-controls">
        {{input type="text" id="form-h-name" classBinding=":uk-width-1-1 model.errors.name:uk-form-danger" value=model.name placeholder="Name"}}
        {{#if model.errors.name }}
          {{ model.errors.name }}
        {{/if}}
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label uk-text-center" for="form-h-email">Email</label>
      <div class="uk-form-controls">
        {{input type="text" id="form-h-email" class="uk-width-1-1" value=model.email placeholder="Email"}}
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label uk-text-center" for="form-h-tags">Tags</label>
      <div class="uk-form-controls">
        {{input type="text" id="form-h-tags" class="uk-width-1-1" value=model.tag_list placeholder="Tags"}}
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label uk-text-center" for="form-h-content">Content</label>
      <div class="uk-form-controls">
        {{textarea id="form-h-content" data-uk-htmleditor="{markdown:true}" cols="100" rows="10" value=model.content placeholder="Content"}}
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label uk-text-center" for="form-h-content"></label>
      <div class="uk-form-controls">
        <button type="submit" class="uk-button uk-button-large">{{saveText}}</button>
        <button type="button" class="uk-button uk-button-large" {{action 'cancel'}}>{{cancelText}}</button>
      </div>
    </div>
  </fieldset>
</form>
