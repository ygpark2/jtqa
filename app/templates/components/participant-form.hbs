<form class="form-horizontal" role="form" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="state" class="col-sm-2 control-label">State</label>
    <div class="col-sm-10">
      {{view Ember.Select
      	id="state"
      	class="form-control"
        content=selectOptions
        optionValuePath="content.value"
        optionLabelPath="content.name"
        value=selected
        prompt="도시를 선택해 주세요"
	  }}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" id="name" placeholder="Name" value=participant.name class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input type="text" id="email" placeholder="Email" value=participant.email class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="phone" class="col-sm-2 control-label">Phone</label>
    <div class="col-sm-10">
      {{input type="text" id="phone" placeholder="Phone" value=participant.phone class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn">{{saveText}}</button>
      <button type="button" class="btn red" {{action 'cancel'}}>{{cancelText}}</button>
    </div>
  </div>
</form>