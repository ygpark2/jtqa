<form class="form-horizontal" role="form" {{action 'submit' on='submit'}}>
  <div class="form-group">
    <label for="state" class="col-sm-2 col-md-1 control-label">지역</label>
    <div class="col-sm-8 col-md-10">
      {{view Ember.Select
      	id="state"
      	class="form-control"
        content=selectOptions
        optionValuePath="content.value"
        optionLabelPath="content.name"
        value=participant.state
        prompt="도시를 선택해 주세요"
	  }}
    </div>
    <div class="col-sm-2 col-md-1"></div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 col-md-1 control-label">이름</label>
    <div class="col-sm-8 col-md-10">
      {{input type="text" id="name" placeholder="Name" value=participant.name class="form-control"}}
    </div>
    <div class="col-sm-2 col-md-1"></div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 col-md-1 control-label">이메일</label>
    <div class="col-sm-8 col-md-10">
      {{input type="text" id="email" placeholder="Email" value=participant.email class="form-control"}}
    </div>
    <div class="col-sm-2 col-md-1"></div>
  </div>
  <div class="form-group">
    <label for="phone" class="col-sm-2 col-md-1 control-label">연락처</label>
    <div class="col-sm-8 col-md-10">
      {{input type="text" id="phone" placeholder="Phone" value=participant.phone class="form-control"}}
    </div>
    <div class="col-sm-2 col-md-1"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-md-11 text-right">
      <button type="submit" class="btn">{{saveText}}</button>
      <button type="button" class="btn red" {{action 'cancel'}}>{{cancelText}}</button>
    </div>
    <div class="col-sm-2 col-md-1"></div>
  </div>
</form>