<h3>Post Show ...</h3>

<article class="uk-article">
    <h1 class="uk-article-title">{{ model.title }}</h1>
    <p class="uk-article-meta"> {{ model.email }} - {{ model.name }}</p>
    <!-- <p class="uk-article-lead">...</p> -->
    {{ model.content }}
    <p>
      {{ model.tag_list }}
    </p>
    <hr class="uk-article-divider">
    <div class="uk-clearfix">
        <div class="uk-float-right">
            {{#link-to 'posts.new' ptype class="uk-button"}} 글쓰기 {{/link-to}}
            {{#link-to 'posts.index' ptype class="uk-button"}} 목록 {{/link-to}}
            {{#link-to 'post.edit' model class="uk-button"}} 수정 {{/link-to}}
        </div>
    </div>
</article>
<h3 class="uk-h2">Comments (4)</h3>
<ul class="uk-comment-list">
    {{#each comment in model.comments}}
    <li>
    <article class="uk-comment uk-comment-primary">
        <header class="uk-comment-header">
            <img class="uk-comment-avatar" src="images/placeholder_avatar.svg" width="50" height="50" alt="">
            <h4 class="uk-comment-title">{{ comment.title }}</h4>
            <div class="uk-comment-meta">12 days ago | Profile | #</div>
        </header>
        <div class="uk-comment-body">
            {{ comment.comment }}
        </div>
    </article>
    </li>
    {{/each}}
</ul>

